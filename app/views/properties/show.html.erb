<p id="notice"><%= notice %></p>
<div class="prop">
<h1><b>物件詳細</b></h1>
<p>
  <strong>物件名:</strong>
  <%= @property.property %>
</p>

<p>
  <strong>賃料:</strong>
  <%= @property.rent %>
</p>

<p>
  <strong>住所:</strong>
  <%= @property.adress %>
</p>

<p>
  <strong>築年数:</strong>
  <%= @property.building_age %>
</p>

<p>
  <strong>備考:</strong>
  <%= @property.remarks %>
</p>
</div>

<!-- モデルを固定してフォームを生成 -->

<tbody>
<% n = 0 %>
<% @stations.each do |station| %>
  <h2><b>最寄駅</b><%= n += 1 %></h2>
    <p>
    <strong>路線名:</strong>
    <%= station.name_of_railway_line %>
    </p>
    <p>
    <strong>駅名:</strong>
    <%= station.station_name %>
    </p>
    <p>
    <strong>徒歩分数:</strong>
    <%= station.how_many_minutes_walks %>
    </p>
    <% end %>
</tbody>

<div class="links">
  <%= link_to '編集', edit_property_path(@property) %>
  <%= link_to '戻る', properties_path %>
</div>
