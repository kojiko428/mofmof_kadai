<h1>物件を編集する</h1>

<%= form_for(@property) do |f| %>
  <% if @property.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(property.errors.count, "error") %> prohibited this property from being saved:</h2>

      <ul>
      <% property.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="property">
  <div class="field">
    <%= f.label :物件名 %>
    <br>
    <%= f.text_field :property %>
  </div>

  <div class="field">
    <%= f.label :賃料 %>
    <br>
    <p> <%= f.text_field :rent %>円</p>
  </div>

  <div class="field">
    <%= f.label :住所 %>
    <br>
    <%= f.text_field :adress %>
  </div>

  <div class="field">
    <%= f.label :築年数 %>
    <br>
   <p> <%= f.number_field :building_age %>年</p>
  </div>

  <div class="field">
    <%= f.label :備考 %>
    <br>
    <%= f.text_area :remarks %>
  </div>
</div >

<!-- horizontal rule（水平方向の罫線） -->
 <hr>

    <h2><b>最寄り駅</b></h2>

 <tbody>

 <%= f.nested_fields_for :stations, wrapper_tag: :tr do |q| %>

 <th>路線名</th>
 <br>
     <td><%= q.text_field :name_of_railway_line %></td>
 <br>
     <th>駅名</th>
     <br>
     <td><%= q.text_field :station_name %></td>
 <br>
     <th>徒歩分数</th>
     <br>
     <td><%= q.number_field :how_many_minutes_walks %><%= "分"%></td>
 <br>
     <td><%= q.remove_nested_fields_link '表示を消す' %></td>
   <% end %>
 </tbody>
</table>
<%= f.add_nested_fields_link :stations, '最寄駅を追加する' %>

  <div class="actions">
    <%= f.submit :登録%>
  </div>
<% end %>


<%= link_to '詳細', @property %>
<%= link_to '戻る', properties_path %>
