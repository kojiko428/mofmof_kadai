<p id="notice"><%= notice %></p>

<h1>物件情報</h1>

<table>
  <th>
    <tr>
      <th>物件名</th>
      <th>賃料</th>
      <th>住所</th>
      <th>築年数</th>
      <th>備考</th>

      <th colspan="3"></th>
    </tr>
  </th>

  <tbody>
    <% @properties.each do |property| %>
      <tr>
        <td><%= property.property %></td>
        <td><p><%= property.rent %>円</p></td>
        <td><%= property.adress %></td>
        <td><p><%= property.building_age %>年</p></td>
        <td><%= property.remarks %></td>

        <td><%= link_to 'Show', property %></td>
        <td><%= link_to 'Edit', edit_property_path(property) %></td>
        <td><%= link_to 'Destroy', property, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

