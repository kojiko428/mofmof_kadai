<p id="notice"><%= notice %></p>

<h1>最寄り駅情報</h1>

<table>
  <thead>
    <tr>
      <th>路線名</th>
      <th>駅名</th>
      <th>徒歩分数</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stations.each do |station| %>
      <tr>
        <td><%= station.name_of_railway_line %></td>
        <td><%= station.statation_name %></td>
        <td><%= station.how_many_minutes_walks %></td>
        <td><%= link_to '表示', station %></td>
        <td><%= link_to '編集', edit_station_path(station) %></td>
        <td><%= link_to '削除', station, method: :delete, data: { confirm: '本当に削除してもよいですか？？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

